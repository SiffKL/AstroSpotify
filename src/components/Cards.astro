---
//her skrives java
const header = Astro.props.header;
const text = Astro.props.text;
const img = Astro.props.img;
---

<article class="cardbox">
  <div class="cardindhold">
    <div class="logo-img">
      <img class="logo" src="../icons/logo-alt.svg" alt="" />
      <img
        class="cover"
        src="https://api.lorem.space/image/album?w=150&h=150&hash=8B7BCDC2"
        alt=""
      />
      <img class="play" src="../icons/play-icon.svg" alt="" />
    </div>
    <h2>{header}</h2>
    <p>{text}</p>

    <slot />
  </div>
</article>

<style>
  /* her ligger styklesheet, css */
  .cardbox {
    display: flex;
    background-color: #323232;
    width: 250px;
    height: 300px;
    margin: 1rem;
    padding: 1rem;
    justify-content: center;
    border-radius: 3%;
  }
  h2 {
    font-size: 18px;
  }
  p {
    font-size: 12px;
  }

  .cardindhold {
  }

  .logo {
    position: absolute;
    margin: 5px;
    filter: invert(100%);
  }

  .play {
    position: absolute;
    margin-top: 110px;
    margin-left: -40px;
    filter: invert(100%);
    width: 30px;
    height: 30px;
  }
</style>
